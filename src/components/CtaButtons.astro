<section aria-label="Call to action" class="relative min-h-[300px] sm:min-h-[350px]">
	<!-- Full-width background image -->
	<div class="absolute inset-0">
		<img
			src="/assets/images/cta-left.jpg"
			alt=""
			loading="lazy"
			decoding="async"
			class="h-full w-full object-cover"
		/>
	</div>

	<!-- Buttons grid -->
	<div class="relative z-10 h-full min-h-[300px] sm:min-h-[350px] grid grid-cols-1 md:grid-cols-2">
		<!-- Left panel - Contact -->
		<div class="flex items-center justify-center py-12">
			<a
				href="/contact"
				class="btn-cta rounded-full bg-[#4F3F90] text-white px-12 py-4 text-base tracking-widest uppercase font-light transition-opacity"
			>
				CONTACT
			</a>
		</div>

		<!-- Right panel - Services -->
		<div class="flex items-center justify-center py-12">
			<a
				href="/services"
				class="btn-cta rounded-full bg-[#4F3F90]/80 text-white px-12 py-4 text-base tracking-widest uppercase font-light transition-opacity"
			>
				SERVICES
			</a>
		</div>
	</div>
</section>
